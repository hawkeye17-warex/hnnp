{
  "name": "@hnnp/backend",
  "version": "0.1.0",
  "private": true,
  "description": "HNNP Cloud backend HTTP service, implementing the Cloud role from protocol/spec.md.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run prisma:generate",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:db": "cross-env NODE_ENV=test RUN_DB_TESTS=1 jest --runInBand",
    "simulate:presence": "ts-node-dev --transpile-only src/scripts/simulate-presence.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:reset": "prisma migrate reset --force",
    "db:seed": "ts-node scripts/seed-dev-db.ts"
  },
  "keywords": [
    "hnnp",
    "presence",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "@supabase/supabase-js": "^2.84.0",
    "argon2": "^0.44.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^6.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0"
  }
}
